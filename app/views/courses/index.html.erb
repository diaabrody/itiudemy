<p id="notice"><%= notice %></p>

<h1>Courses</h1>




  <div class="row text-center">
    <% @courses.each do |course| %>


      <div class="col-lg-4 col-md-6 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h4 class="card-title">
            <%= link_to course.title ,  course_path(course) %>
            </h4>
            <h5>$24.99</h5>
            <p class="card-text">this course is awsome buy it </p>
          </div>
          <div class="card-footer">
            <%= link_to 'Show Course' , course_path(course) ,class: 'btn btn-success' %>
          </div>
        </div>
      </div>


    <% end %>


  </div>


<br>


